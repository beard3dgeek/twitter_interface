.grid-33
    .app--section
        ul.app--message--list
            if messages
                each convo,index in messages 
                    li
                        h3
                            if (index == me)
                                | Conversation with #{screen_name}
                            else
                                | Conversation with #{users[index].screen_name}
                            ul.app--message--conversation
                                each message in convo
                                    if message.me
                                        li.app--message--me
                                            include message.pug
                                    else
                                        li.app--message
                                            include message.pug
